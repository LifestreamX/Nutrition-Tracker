generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id               String        @id @default(cuid())
  email            String        @unique
  passwordHash     String?
  loginAttempts    Int           @default(0)
  lastLoginAttempt DateTime?
  macroTargets     MacroTargets? // Optional macro targets for the user
}

model MacroTargets {
  id       String  @id @default(cuid())
  user     User?   @relation(fields: [userId], references: [id])
  userId   String? @unique
  calories Float?
  protein  Float?
  carbs    Float?
  fats     Float?

  @@index([userId], name: "MacroTargets_userId_index")
}
